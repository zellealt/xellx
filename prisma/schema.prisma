// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model config {
  guild_id                 BigInt   @unique
  sticky_roles             BigInt[]
  auto_role                BigInt
  audit_log_channel        BigInt
  welcome_messages_channel BigInt
  // audit_log                Boolean
}

model users {
  user_id  BigInt
  guild_id BigInt
  bans     Int
  kicks    Int
  warns    Int

  @@unique([user_id, guild_id])
}

model commands {
  guild_id BigInt  @unique
  ban      Boolean
  kick     Boolean
  warn     Boolean
  info     Boolean
}

model logs {
  id       BigInt   @id
  guild_id BigInt
  user     String
  action   String
  date     DateTime @default(now())
  icon     String
  image    String
}

model na_accounts {
  id                   Int       @id
  compound_id          String    @unique
  user_id              Int       @unique
  provider_type        String
  provider_id          String
  provider_account_id  String    @unique
  refresh_token        String    @unique
  access_token         String    @unique
  access_token_expires DateTime?
  created_at           DateTime?
  updated_at           DateTime?
}

model na_sessions {
  id            Int       @id
  user_id       Int       @unique
  expires       DateTime?
  session_token String    @unique
  access_token  String    @unique
  created_at    DateTime?
  updated_at    DateTime?
}

model na_users {
  id             Int       @id
  name           String
  email          String
  email_verified DateTime?
  image          String
  created_at     DateTime?
  updated_at     DateTime?
}

model na_verification_requests {
  id         Int       @id @unique
  identifier String
  token      String    @unique
  expires    DateTime?
  created_at DateTime?
  updated_at DateTime?
}
